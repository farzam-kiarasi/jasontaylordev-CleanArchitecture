@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@using BlazorFluentUI.Routing

@inject NavigationManager Navigation
@inject SignOutSessionStateManager SignOutManager

<AuthorizeView>
    <Authorized>
        <BlazorFluentUI.Routing.NavLink Name="@context.User.Identity.Name" Url="authentication/profile" Id="Profile" IconName="person" />
        <BlazorFluentUI.Routing.NavLink Name="Log out" Id="logout" IconName="sign_out" OnClick="BeginSignOut"/>
    </Authorized>
    <NotAuthorized>
        <BlazorFluentUI.Routing.NavLink Name="Register" Url="authentication/register" Id="register" IconName="person" />
        <BlazorFluentUI.Routing.NavLink Name="Login" Url="authentication/login" Id="login" IconName="accessibility" />
    </NotAuthorized>
</AuthorizeView>

@code{
    private async Task BeginSignOut()
    {
        await SignOutManager.SetSignOutState();
        Navigation.NavigateTo("authentication/logout");
    }
}
